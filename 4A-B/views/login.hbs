{{#>layout currentPage = 'Login'}}
    <form class="form-field" action="/login" method="post">
        <h1 style="text-align: center;">
            LOGIN
        </h1>
        {{#if messages.registered}}
            <div class="alert alert-info" role="alert">
                {{messages.registered}}
            </div>
        {{/if}}
        {{#if messages.incorrect}}
            <div class="alert alert-danger" role="alert">
                {{messages.incorrect}}
            </div>
        {{/if}}
        <div class="mb-3">
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="mb-3">
            <div class="input-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">Show</button>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary custom-btn">Login</button>
        </div> 
    </form>
{{/layout}}